<div class="mainwindow">
    <div class="content_window" id="reader">
        {{#if message}}        
        <div class="flexorientation--spaceb">
            <h2>{{message.title}}</h2>
            <small>{{message.date}}</small>
        </div>               
        <hr>        
        <p>{{message.content}}</p>
        <small>Remetente: {{message.sender.name}}</small>
        <div class="flexorientation--spaceb">
            <div>
                <label>Processo:</label>
                <a>{{message.process_title}}</a>
            </div>
            <form method="POST" action="/mensageiro/caixadeentrada/{{message._id}}/delete">
                <button class="redbutton" style="margin-top: 0px; margin-left: 20px;"><img src="/img/trash.png" style="height: 16px;"></button>               
            </form>
        </div>
        {{/if}}             
    </div>   
</div>