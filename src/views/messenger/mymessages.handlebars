<div class="mainwindow">
    <div class="content_window">
        <div class="header_color">
            <h2>Mensagens Enviadas</h2>
        </div>        
        <div class="flexorientation--start">
            <div class="messenger_header">
                <label>Titulo:</label>
            </div>
            <div class="messenger_header">
                <label>Processo:</label>
            </div>
            <div class="messenger_header">
                <label>Destinat√°rio:</label>
            </div>
            <div class="messenger_header">
                <label>Data:</label>
            </div>            
        </div>
        <hr>
        {{#if messages}}
        {{#each messages}}
        <a href="/mensageiro/enviadas/{{_id}}" class="message_style">        
        <div class="flexorientation--spaceb list_iten">
            <div class="messenger_body">
                <label>{{title}}</label>
            </div>
            <div class="messenger_body">
                <label>{{process_title}}</label>
            </div>
            <div class="messenger_body">
                <label>{{section_receiver}}</label>
            </div>
            <div class="messenger_body">
                <label>{{date}}</label>
            </div>
            <form method="POST" action="/mensageiro/enviadas/{{_id}}/delete">
                <button class="redbutton" style="margin-top: 0px; margin-left: 20px;"><img src="/img/trash.png" style="height: 16px;"></button>               
            </form>
        </div>
        </a>
        {{/each}}
        {{/if}}
        <div class="flexorientation--spaceb">
            <div class="arrow_disabled" id="back">
                <a id="backlink"><img src="/img/seta2.png" style="height: 20px; width: 20px;"></a>
            </div>
            <div class="arrow_disabled" id="next">
                <a id="nextlink"><img src="/img/seta.png" style="height: 20px; width: 20px;"></a>
            </div>
        </div>         
    </div>   
</div>
<script>
    const index = '{{index}}'
    const count = '{{count}}'
    const back = document.getElementById('back');
    const next = document.getElementById('next');
    const backLink = document.getElementById('backlink');
    const nextLink = document.getElementById('nextlink');
    const messages = 15;     

    if(index > 0){
        back.setAttribute('class', 'arrow')
        backLink.setAttribute('href', `/mensageiro/enviadas${index - 1}`);
    }

    if(((index +2)* messages <= count ) !== ((index +2) * messages - count < messages && (index +2) * messages - count >= 0)){
        next.setAttribute('class', 'arrow');
        nextLink.setAttribute('href', `/mensageiro/enviadas${index +1}`);
    }
</script>