<div class="mainwindow">
    <form class="content_window" id="formm" method="POST">
        <h2>Nova Mensagem</h2>
        <hr>
        <div class="flexorientation--start">
            <div>
                <label>Titulo:</label>
                <input type="text" name="title">
            </div>
             <div class="flexorientation--start">
                <label>Destinat√°rio:</label>               
                <input type="hidden" value="{{user.section}}" id="sectionvalue">
                <div id="selectsection">                                                         
                </div>                
                <div id="receiver" style="margin-left: 10px;">
                </div>
            </div>
        </div>
        <textarea class="param_text" name="content" style="height: 500px;"></textarea>
        <div style="margin-top: 10px;">
            <label>Processo:</label>
            <select name="year" id="year">
                <option value="{{processYear}}">{{processYear}}</option>                
            </select>            
            <select name="process" id="process"> 
                <option value="{{processId}}" id="{{processId}}">{{processTitle}}</option>              
            </select>            
        </div>
        <div>
            <input type="submit" class="button" value="Enviar" id="submitformm">
        </div>               
    </form>   
</div>
