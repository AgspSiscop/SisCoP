<div class="mainwindow">
    <div class="content_window">
        {{#if errors}}
        {{#each errors}}
        <div class="error_message"><p>{{text}}</p></div>
        <br>
        {{/each}}        
        {{else}}
        {{/if}}
        <div>
            <h2>{{process.title}}</h2>                        
        </div>
        <hr>        
         <form method="POST" action="/meusprocessos/{{process.year}}/edit/{{process.user_dir}}">
            <div>
                <label>Nome:</label>
                <input type="text" class="mediumtext" name="object" value="{{process.title}}" required>                
            </div>
            <div>
                <label>Nup:</label>
                <input type="text" class="mediumtext" name="nup" value="{{process.nup}}" required>
            </div>
            <div>
                <label>Origem:</label>
                <select name="origin">
                    <option value="{{process.origin}}">{{process.origin}}</option>
                    <option value="Armamento Pesado">Armamento Pesado</option>
                    <option value="Armamento Leve">Armamento Leve</option>
                    <option value="Correaria">Correaria</option>
                    <option value="STS">STS</option>
                    <option value="Linha de Blindados">Linha de Blindados</option>
                    <option value="Comunicações">Comunicações</option>
                    <option value="Óptica">Óptica</option>
                    <option value="Pelotão de Obras">Pelotão de Obras</option>
                    <option value="Almoxerifado">Almoxerifado</option>
                    <option value="Suprimento">Suprimento</option>
                    <option value="Informática">Informática</option>
                    <option value="Posto Médico">Posto Médico</option>
                    <option value="Divisão de Inovação, Planejamento e Qualidade"> Divisão de Inovação, Planejamento e Qualidade</option>
                    <option value="Divisão Industrial">Divisão Industrial</option>
                    <option value="Compania de Comando e Serviço">Compania de Comando e Serviço</option>
                </select>
            </div>
            <div>
                <label>Forma de Aquisição:</label>                
                <select name="category">
                    <option value="{{process.category}}">{{process.category}}</option>
                    <option value="Licitação">Licitação</option>
                    <option value="Dispensa">Dispensa de Licitação</option>
                    <option value="Inexigibilidade">Inexigibilidade</option>
                </select>                
            </div>
            <div class="flexorientation--start">
                <label>Descrição:</label>
                <textarea class="param_text_description" name="description">{{process.description}}</textarea>                
            </div>
            <input type="submit" value="Editar" class="button">
        </form>              
        <div id="list" class="list">           
        </div>        
    </div>
</div>